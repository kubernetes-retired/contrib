server:
  interface: 0.0.0.0
  access-control: 0.0.0.0/0 allow
  verbosity: 1

  do-daemonize: no
  
  use-syslog: no
  logfile: ""
  
  # port to answer queries from
  port: 53

  do-ip4: yes
  #do-ip6: yes
  do-udp: yes
  #do-tcp: yes

  # Read  the  root  hints from this file. Default is nothing, using built in
  # hints for the IN class. The file has the format of  zone files,  with  root
  # nameserver  names  and  addresses  only. The default may become outdated,
  # when servers change,  therefore  it is good practice to use a root-hints
  # file.  get one from ftp://FTP.INTERNIC.NET/domain/named.cache
  # root-hints: "/var/unbound/etc/root.hints"

  # the time to live (TTL) value lower bound, in seconds. Default 0.
  # If more than an hour could easily give trouble due to stale data.
  # 0 preserves the TTL returned from the server.
  cache-min-ttl: 180

  # the time to live (TTL) value cap for RRsets and messages in the
  # cache. Items are not cached for longer. In seconds.
  cache-max-ttl: 86400

  # perform prefetching of close to expired message cache entries.  If a client
  # requests the dns lookup and the TTL of the cached hostname is going to
  # expire in less than 10% of its TTL, unbound will (1st) return the ip of the
  # host to the client and (2nd) pre-fetch the dns request from the remote dns
  # server.
  prefetch: yes
  prefetch-key: yes

  ## Unbound Optimization and Speed Tweaks ###

  # use all CPUs
  num-threads: {{ .cpus }}

  # the number of slabs to use for cache and must be a power of 2 times the
  # number of num-threads set above. more slabs reduce lock contention, but
  # fragment memory usage.
  msg-cache-slabs: {{ .p2tCPU }}
  rrset-cache-slabs: {{ .p2tCPU }}
  infra-cache-slabs: {{ .p2tCPU }}
  key-cache-slabs: {{ .p2tCPU }}

  # Increase the memory size of the cache. Use roughly twice as much rrset cache
  # memory as you use msg cache memory. Due to malloc overhead, the total memory
  # usage is likely to rise to double (or 2.5x) the total cache memory.
  rrset-cache-size: 100m
  msg-cache-size: 50m

  # buffer size for UDP port 53 incoming (SO_RCVBUF socket option). This sets
  # the kernel buffer larger so that no messages are lost in spikes in the traffic.
  # sysctl -w net.core.wmem_max=1280000
  # sysctl -w net.core.rmem_max=1280000
  so-rcvbuf: 4m
  so-sndbuf: 4m

  # If nonzero, unwanted replies are not only reported in statistics, but also
  # a running total is kept per thread. If it reaches the threshold, a warning
  # is printed and a defensive action is taken, the cache is cleared to flush
  # potential poison out of it.  A suggested value is 10000000, the default is
  # 0 (turned off).
  unwanted-reply-threshold: 10000000

  do-not-query-localhost: no

  # Faster UDP with multithreading
  so-reuseport: yes
 
  outgoing-range: 8192
  num-queries-per-thread: 4096

  statistics-interval: 0
  extended-statistics: yes
  # set to yes if graphing tool needs it
  statistics-cumulative: no 

  harden-large-queries: yes
  harden-glue: yes
  harden-dnssec-stripped: yes
  rrset-roundrobin: yes
  minimal-responses: yes

remote-control:
  control-enable: yes
  control-use-cert: no
  control-interface: /var/run/unbound.sock

forward-zone:
  name: "{{ .domain }}."
  forward-addr: 127.0.0.1@54

{{ range $i,$domain := .customForward }}
forward-zone:
  name: "{{ $domain.Name }}."
  forward-addr: {{ $domain.IP }}
{{ end }}

forward-zone:
  name: "."
{{ range .dnsServers }}  forward-addr: {{ . }}
{{ end }}
