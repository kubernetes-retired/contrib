apiVersion: v1
kind: ReplicationController
metadata:
  name: post-service
spec:
  replicas: 2
  template:
    metadata:
      labels:
        yinnut-svc: "post"
        version: "deploy" # this version is from ansible-playbook CLI extra-varibles
    spec:
      nodeSelector:
        minion_node: "true"
        proxy_node: "false"
      containers:
      - name: post-service
        image: {{ private_registry }}/post-service:{{ svc_version }}  # this version is from ansible-playbook CLI extra-varibles
        imagePullPolicy: Always # we always update using the latest image
        env:
        - name: KEY
          value: "VALUE"
        ports:
        - containerPort: {{ service_port }}
          protocol: TCP
        command: ["sh","-c","/post-service/run.sh"]
        volumeMounts:
        - name: timezone
          mountPath: /etc/localtime
          readOnly: true
      volumes:
      - name: timezone
        hostPath:
          path: /etc/localtime
