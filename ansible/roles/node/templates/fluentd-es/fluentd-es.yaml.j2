apiVersion: v1
kind: Pod
metadata:
  name: fluentd-elasticsearch
  namespace: kube-system
spec:
  containers:
  - name: fluentd-elasticsearch
    image: {{ private_registry }}/fluentd-elasticsearch:1.12
    resources:
      limits:
        cpu: 100m
    args:
    - -q
    volumeMounts:
    - name: timezone
      mountPath: /etc/localtime
      readOnly: true
    - name: varlog
      mountPath: /var/log
    - name: varlibdockercontainers
      mountPath: /var/lib/docker/containers
      readOnly: true
  terminationGracePeriodSeconds: 30
  volumes:
  - name: timezone
    hostPath:
      path: /etc/localtime
  - name: varlog
    hostPath:
      path: /var/log
  - name: varlibdockercontainers
    hostPath:
      path: /var/lib/docker/containers

